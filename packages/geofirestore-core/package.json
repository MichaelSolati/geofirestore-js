{
  "name": "geofirestore-core",
  "description": "Lightweight location-based querying and encoding of Firebase Firestore Documents for geofirestore.",
  "version": "5.0.0",
  "scripts": {
    "build": "npm-run-all rimraf build:rollup build:types build:docs",
    "build:docs": "typedoc --out docs/ src/",
    "build:rollup": "rollup -c",
    "build:types": "tsc --project tsconfig.json --declaration --emitDeclarationOnly",
    "coverage": "codecov -c -F geofirestore-core",
    "lint": "gts lint",
    "test": "firebase emulators:exec 'npm run test:nyc'",
    "test:nyc": "nyc --reporter=lcov --reporter=text mocha --package package.json --exit",
    "rimraf": "rimraf ./dist",
    "prepare": "npm run build"
  },
  "main": "dist/index.cjs.js",
  "browser": "dist/geofirestore-core.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "author": "Michael Solati <mkslt04@gmail.com>",
  "homepage": "https://core.geofirestore.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/MichaelSolati/geofirestore-js.git"
  },
  "bugs": {
    "url": "https://github.com/MichaelSolati/geofirestore-js/issues"
  },
  "readme": "README.md",
  "license": "MIT",
  "keywords": [
    "geoquery",
    "location",
    "firebase",
    "firestore",
    "realtime",
    "geolocation",
    "geofire",
    "geohash",
    "map"
  ],
  "files": [
    "dist/**",
    "CHANGELOG.md",
    "LICENSE.md",
    "package-lock.json",
    "package.json",
    "README.md"
  ],
  "dependencies": {
    "geokit": "^1.1.0"
  },
  "optionalDependencies": {
    "@firebase/firestore": ">= 3.0.0 < 4.0.0",
    "@google-cloud/firestore": ">= 5.0.0 < 6.0.0",
    "firebase": ">= 9.0.0 < 10.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.16",
    "chai": "^4.3.6",
    "codecov": "^3.8.3",
    "firebase-tools": "^10.1.5",
    "generate-changelog": "^1.8.0",
    "gts": "^3.1.0",
    "jsdom": "^19.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "protobufjs": "^6.11.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.67.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-node": "^10.5.0",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.11",
    "typescript": "~4.3.5"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "reporter": "spec",
    "require": [
      "ts-node/register",
      "jsdom-global/register"
    ],
    "timeout": 30000
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
